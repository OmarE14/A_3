<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--form for the edit page, with the existing values added to it -->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Name" name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Phone Number</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Person's Phone number" name="PhoneNumber" value="<%= Book.PhoneNumber %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Person's Email (optional)" name="Email" value="<%= Book.Email %>">
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Notes</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Notes (optional)" name="Notes"><%= Book.Notes %></textarea>
                </div>
                <button class="btn btn-primary" type="submit"> Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit"> Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>